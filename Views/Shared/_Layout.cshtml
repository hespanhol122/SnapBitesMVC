<!DOCTYPE html>
<html lang="pt-br">
<head>
    @RenderSection("css", required: false)
    <title>SnapBites Home</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnapBites</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SnapBites.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="CSS/home.css">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="icon" type="image/png" href="imagens/Icon.svg" />
</head>
<body background="imagens/Plano de fundo desktop.svg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 cor1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="imagens/Logo Branca.svg" height="65px" width="65px" style="margin-top: -15px;  margin-bottom: -15px;">
                </a>
                <div class="navbar-collapse collapse dd-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link text-light active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Login">Feed</a></li>
                        <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Index")#tela-sobre">Sobre</a></li>
                        <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Index")#tela-contato">Contato</a></li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Pesquisar" aria-label="Search">
                        <button class="btn btn-light" type="submit">
                            <img src="imagens/Bt-Search.svg" height="25px" width="25px"
                                 alt="">
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SnapBites - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
