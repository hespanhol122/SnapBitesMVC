@{
    ViewData["Title"] = "Publicar";
}

@section css {
    <link rel="stylesheet" href="/css/feed.css" />
}

<div class="container mt-5 text-start fundo rounded perfil">
    <div class="row row-cols-sm-1 mb-5">
        <div class="col-sm-6 mt-3">
            <img class="img-fluid rounded mb-3 img-publi" src="../imagens/alema.jpg" alt="">
        </div>
        <div class="col-md-6 mt-3">
            <div class=" row text-center justify-content-center">
                <h2 class="mt-3">Adicione um titulo</h2>
                <div class="form-floating sm-3">
                    <input type="Titulo" class="form-control" id="floatingInput" placeholder="Adicione um titulo">
                    <label for="floatingInput">Titulo</label>
                </div>
                <div class="container justify-content-center ">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-12">
                            <div class="input-group mt-3">
                                <label class="input-group-text" for="inputGroupFile01">Upload</label>
                                <input type="file" class="form-control" id="inputGroupFile01">
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="mt-5 container justify-content-center " style="width: 95%;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <div style="height: auto;">
                                <div class="">
                                    <h2>Escreva o conteudo da sua publicação</h2>
                                    <div class="form-floating">
                                        <textarea class="form-control" placeholder="Escreva seu texto" id="floatingTextarea2" style="height: 100px; width: 100%;"></textarea>
                                        <label for="floatingTextarea2">Texto</label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-5 mb-5">
                                <a class="btn btn-dark justify-content-center btn-lg btn-color" type="button" href="Feed.html"
                                   style="width: 150px;">Excluir</a>
                                <a class="btn btn-dark justify-content-center btn-lg btn-color" type="button" href="Publicacao.html"
                                   style="width: 150px;">Publicar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>