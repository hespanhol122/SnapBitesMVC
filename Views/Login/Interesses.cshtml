@{
    ViewData["Title"] = "Interesses";
}

@section css {
    <link rel="stylesheet" href="/css/Interesses.css" />
}

<header class="navbar p-2 cbc">
    <a href="home.html" class="navbar-brand">
        <img src="../imagens/Logo Branca.svg" height="90px" width="90px"
             style="margin-top: -15px;  margin-bottom: -15px;">
    </a>
    <h1>Selecione seus interesses</h1>
</header>

<section class="container text-center mt-5">
    <div class="row">
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check" checked autocomplete="off">

            <label class="btn btn-dark tamanho" for="btn-check" for="italian">
                <img src="../imagens/comida-italiana.jpg" alt="Culinária Italiana">
                <p>Culinária Italiana</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-1" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-1" for="mexican">
                <img src="../imagens/comida-mexicana.jpg" alt="Culinária Mexicana">
                <p>Culinária Mexicana</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-2" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-2" for="indian">
                <img src="../imagens/brasileira.jpg" alt="Culinária Indiana">
                <p>Culinária Brasileira</p>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-3" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-3" for="japanese">
                <img src="../imagens/japonesa.jpg" alt="Culinária Japonesa">
                <p>Culinária Japonesa</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-4" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-4" for="french">
                <img src="../imagens/francesa.jpg" alt="Culinária Francesa">
                <p>Culinária Francesa</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-5" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-5" for="arabic">
                <img src="../imagens/arabica.jpg" alt="Culinária Chinesa">
                <p>Culinária Arábica</p>
            </label>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-6" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-6" for="spanish">
                <img src="../imagens/espanha.jpg" alt="Culinária Italiana">
                <p>Culinária Espanhola</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-7" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-7" for="germany">
                <img src="../imagens/alema.jpg" alt="Culinária Italiana">
                <p>Culinária Alemã</p>
            </label>
        </div>
        <div class="col">
            <input type="checkbox" class="btn-check" id="btn-check-8" checked autocomplete="off">
            <label class="btn btn-dark tamanho" for="btn-check-8" for="Others">
                <img src="../imagens/alema.jpg" alt="Diversos">
                <p>Diversos</p>
            </label>
        </div>
    </div>
    <a asp-area="" asp-controller="Login" asp-action="Cadastro" class="btn btn-dark justify-content-center btn-lg mt-3" style="width: 150px;">Voltar</a>
    <a asp-area="" asp-controller="Feed" asp-action="Feed" class="btn btn-dark justify-content-center btn-lg mt-3" style="width: 150px;">Continuar</a>
</section>